    </form> -->


     <div id="filters">
        <div id="filters">
            <a href="/listings/customized?category=LakeFront" class="filter">
                <div><i class="fa-solid fa-water"></i></div>
                <p>LakeFront</p>
            </a>
            <a href="/listings/customized?category=Beach" class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </a>
            <a href="/listings/customized?category=Iconic%20Cities" class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </a>
            <a href="/listings/customized?category=Castles" class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </a>
            <a href="/listings/customized?category=Amazing%20Pools" class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </a>
            <a href="/listings/customized?category=Mountains" class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>
            <a href="/listings/customized?category=Camping" class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </a>
            <a href="/listings/customized?category=Farms" class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </a>
            <a href="/listings/customized?category=Arctic" class="filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <p>Arctic</p>
            </a>
            <a href="/listings/customized?category=Domes" class="filter">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Domes</p>
            </a>
            <a href="/listings/customized?category=Boats" class="filter">
                <div><i class="fa-solid fa-sailboat"></i></div>
                <p>Boats</p>
            </a>
        </div>    
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
         </div>
    </div>    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(listing of allListings){ %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" 
                        class="card-img-top" 
                        alt="listing_image" 
                        style="height: 20rem;"
                    />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title %><br></b>
                            &#8377;<%=listing.price.toLocaleString("en-IN")%> /night
                            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
          <%}%>
    </div>
</body>
</html>

